{% extends 'AdminBundle::base.html.twig' %}

{% block body -%}
    <h1>Speaker list</h1>
    <a href="{{ path('admin_speaker_new') }}" class="btn btn-success"> Create a new entry </a>

    <table class="records_list table table-condensed table-striped table-hover">
        <thead>
            <tr>
                <th>Actions</th>                
                <th>Id</th>
                <th>Name Hy</th>
                <th>Name En</th>
                <th>Presentation Topic Hy</th>
                <th>Presentation Topic En</th>
                <th>Social</th>
                <th>Photo</th>

            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>
                    <a class="btn btn-warning" href="{{ path('admin_speaker_edit', { 'id': entity.id }) }}">edit</a>
                </td>                 
                <td><a href="{{ path('admin_speaker_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.nameHy }}</td>
                <td>{{ entity.nameEn }}</td>
                <td>{{ entity.presentationTopicHy }}</td>
                <td>{{ entity.presentationTopicEn }}</td>
                <td>
                    {% if entity.facebook is not empty %}<a href="{{ entity.facebook }}">{% endif %}
                        <i class="fa fa-facebook"></i> </a>
                    {% if entity.twitter is not empty %}<a href="{{ entity.twitter }}">{% endif %}
                        <i class="fa fa-twitter"></i> </a>
                    {% if entity.instagram is not empty %}<a href="{{ entity.instagram }}">{% endif %}
                        <i class="fa fa-instagram"></i> </a>
                    {% if entity.linkedin is not empty %}<a href="{{ entity.linkedin }}">{% endif %}
                        <i class="fa fa-linkedin"></i> </a>
                </td>
                <td>{% if entity.photo is not empty %}
                        <img src="{{ entity.photo }}" />
                    {% endif %}
                </td>
           </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_speaker_new') }}" class="btn btn-success"> Create a new entry </a>

{% endblock %}
